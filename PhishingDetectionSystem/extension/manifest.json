{
  "manifest_version": 3,
  "name": "PhisHawk Phishing Detector",
  "version": "1.0",
  "description": "Detect phishing emails in Gmail using AI.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://mail.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://mail.google.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}